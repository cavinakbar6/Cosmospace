<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/quiz_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progress="50"
        android:progressDrawable="@drawable/bg_rounded_button"
        android:progressTint="@color/neon_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_mascot"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img_astronaut"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quiz_progress" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/card_cream"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_mascot"
        app:layout_constraintTop_toTopOf="@id/img_mascot"
        app:layout_constraintBottom_toBottomOf="@id/img_mascot">

        <TextView
            android:id="@+id/text_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Loading pertanyaan seru..."
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_option_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_button"
        android:backgroundTint="#2B2B3D"
        android:text="..."
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:padding="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/img_mascot" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_option_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_button"
        android:backgroundTint="#2B2B3D"
        android:text="..."
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_option_a" />

    <LinearLayout
        android:id="@+id/layout_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_cream"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wah Keren! ðŸŽ‰"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"/>

        <TextView
            android:id="@+id/text_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamu harus coba fitur ini..."
            android:layout_marginTop="8dp"
            android:textColor="#555555"/>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cek Fiturnya Sekarang! ðŸš€"
            android:backgroundTint="@color/neon_blue"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>