<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cosmic_black_darker"
    android:padding="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_planet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Planet"
        android:textColor="@color/neon_blue"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-light" />

    <TextView
        android:id="@+id/text_planet_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtitel Planet"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JARAK (dari Matahari)"
                android:textColor="@color/mars_red"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_data_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0 AU"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERIODE ORBIT"
                android:textColor="@color/mars_red"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_data_orbit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="365 hari"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIAMETER"
                android:textColor="@color/mars_red"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_data_diameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,742 km"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUHU RATA-RATA"
                android:textColor="@color/mars_red"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/text_data_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15Â°C"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUMLAH BULAN"
            android:textColor="@color/mars_red"
            android:textSize="12sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/text_data_moons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>