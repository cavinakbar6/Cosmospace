<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_neo_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/cosmic_black_darker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bg_asteroid_placeholder"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_neo_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Asteroid Name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_neo_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMAN"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_neo_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: 100m"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_neo_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jarak: 15,000,000 km"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/text_neo_velocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed: 50,000 km/h"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>